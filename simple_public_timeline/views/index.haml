                        %option{:value => "fil"} Filipino - Filipino
      #footer.round
        %h3.offscreen Footer
        %ul.footer-nav
          %li.first &copy; 2012 Twitter
          %li
            %a{:href => "/about"} About Us
          %li
            %a{:href => "/about/contact"} Contact
          %li
            %a{:href => "http://blog.twitter.com"} Blog
          %li
            %a{:href => "http://status.twitter.com"} Status
