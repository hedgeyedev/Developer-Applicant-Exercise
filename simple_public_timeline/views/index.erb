<!doctype html>
<html>
<head>
  <meta charset="utf-8">
</head>
<body>

  <h1>Recent Public Tweets</h1>

  <h2>What everyone on Twitter is talking about</h2>

  <% @tweets.each do |tweet| %>
    <div>
      <img src="<%= tweet['user']['profile_image_url'] %>"/>
      <a href="<%= "http://twitter.com/#{tweet['user']['screen_name']}" %>"><%= tweet['user']['screen_name'] %></a><br/>
      <%= tweet['text'] %><br/><br/>
      Tweeted at: <%= tweet['created_at'] %><br/>
      Source: <%= tweet['source'] %>

    </div>
  <% end %>

</body>
</html>
